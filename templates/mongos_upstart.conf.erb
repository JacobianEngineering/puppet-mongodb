# Ubuntu upstart file at /etc/init/mongos_<%= @mongos_instance %>.conf

start on runlevel [2345]
stop on runlevel [06]

limit nofile 20000 20000

script

  HOMEDIR=<%= @conf['homedir'] %>
  DBUSER=<%= @conf['user'] %>
  CONFIG_FILE=<%= @conf['configfile'] %>


  if [ -f $HOMEDIR/mongos.lock ]; then
          rm $HOMEDIR/mongos.lock
          sudo -u $DBUSER /usr/bin/mongos --config $CONFIG_FILE --repair
  fi
  exec start-stop-daemon --start --quiet --pidfile $HOMEDIR/mongos.pid --chuid $DBUSER --exec  /usr/bin/mongos -- --config $CONFIG_FILE

end script